@model IEnumerable<SchoolManagement.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Kurser";
}

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="col-lg-offset-4">KURSER</h2>
                    <div class="button-margin">
                        <form class="navbar-form navbar-right" role="search" method="post" action="/Home/CourseSearch">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Sök" name="search">
                            </div>
                            <button type="submit" class="btn btn-info">Sök</button>
                            @if (ViewBag.VisaKnapp != null)
                            {
                                @Html.ActionLink("Reset", "GetAllCourses", null, new { @class = "btn btn-info" })
                            }
                        </form>
                        @*<a href="#menu-toggle" class="btn btn-default" id="menu-toggle" style="margin-top:25px">Dölj/Visa Menyn</a>*@
                        @Html.ActionLink("Dölj/Visa Menyn", "#menu-toggle", null, new { @class = "btn btn-default", @id = "menu-toggle" })
                        @Html.ActionLink("Registrera ny Kurs", "AddCourse", null, new { @class = "btn btn-primary" })
                    </div>
                    
                    <table class="table table-hover">
                        <tr>
                            <th id="printhide"></th>
                            <th id="printhide"></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Info)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Points)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td id="printhide" style="width:50px;">
                                    <a href="@Url.Action("EditCourse", new{ ID = item.ID})">
                                        <span title="Uppdatera" class="glyphicon glyphicon-edit"></span>
                                    </a>
                                </td>
                                <td id="printhide" style="width:50px;">
                                    <a href="@Url.Action("DeleteCourse", new{ ID = item.ID})">
                                        <span title="Avregistrera" class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Info)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Points)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>