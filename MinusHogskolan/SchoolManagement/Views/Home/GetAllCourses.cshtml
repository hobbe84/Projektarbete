@model IEnumerable<SchoolManagement.Models.Courses>

@{
    ViewBag.Title = "Kurser";
}

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="col-lg-offset-4">KURSER</h2>
                    <div style="margin-bottom:20px;">
                        @Html.ActionLink("Skapa ny kurs", "AddCourse", null, new { @class = "btn btn-primary" })
                    </div>
                    <table class="table table-hover">
                        <tr>
                            <th></th>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Info)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Points)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:50px;">
                                    <a href="@Url.Action("EditCourse", new{ ID = item.ID})">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                </td>
                                <td style="width:50px;">
                                    <a href="@Url.Action("DeleteCourse", new{ ID = item.ID})">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Info)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Points)
                                </td>
                            </tr>
                        }
                    </table>
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle" style="margin-top:25px">Dölj/Visa Menyn</a>
                </div>
            </div>
        </div>
    </div>